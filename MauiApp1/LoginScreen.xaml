<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LoginScreen"
             Title="LoginScreen"
             Background="LightGray">
    <VerticalStackLayout VerticalOptions="Center" Spacing="12" >
        
        <Label 
            Text="Hesap Makinesine Hoşgeldiniz"
            FontSize="25"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            
            />
        <Entry Placeholder="Kullanıcı Adi" WidthRequest="180" Background="White"/>
        <Entry Placeholder="Parola" WidthRequest="180" Background="White"/>
        
        <HorizontalStackLayout HorizontalOptions = "Center" Spacing="10">
        <Button
            Clicked="Giris_Butonu"
            Text="Giris Yap"
            WidthRequest ="100"
            Style = "{StaticResource Buttons}"
            />
        <Button
            Clicked="Kayit_Butonu"
            Text="Kayit Ol"
            WidthRequest ="100"
            Style = "{StaticResource Buttons}"
            />
        </HorizontalStackLayout>
       
    </VerticalStackLayout>
</ContentPage>